            </dependency>
            <dependency>
                <groupId>com.dianping</groupId>
                <artifactId>customer-data-api</artifactId>
                <version>${customer-data-api.version}</version>
            </dependency>
            <dependency>
                <groupId>com.dianping.platform</groupId>
