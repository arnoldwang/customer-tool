                </exclusions>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>com.dianping</groupId>
                <artifactId>tp-deal-data-api</artifactId>
                <version>${tp.deal.data.api.version}</version>
            </dependency>
            <dependency>
