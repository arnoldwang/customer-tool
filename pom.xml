        <spring.version>3.2.5.RELEASE</spring.version>
        <project.services.version.dal>0.6.0_notfilter-SNAPSHOT</project.services.version.dal>
        <customer-data-api.version>1.0.8</customer-data-api.version>
    </properties>

    <dependencyManagement>
