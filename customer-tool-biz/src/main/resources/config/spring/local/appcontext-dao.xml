<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

       <bean id="daoScanner" class="com.dianping.customer.tool.DaoScanner">
              <property name="scanPackageList">
              <list>
                     <ref bean="crmTestDao"/>
              </list>
              </property>
       </bean>

       <bean id="crmTestDao" class="java.util.HashMap">
              <constructor-arg>
                     <map>
                     <entry key="PACKAGE_NAME" value="com.dianping.customer.tool.dao"/>
                     <entry key="PARENT_DAO_NAME" value="testDaoSql"/>
                     </map>
              </constructor-arg>
       </bean>

</beans>
