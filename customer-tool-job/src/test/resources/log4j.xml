<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     threshold="null" debug="null">
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="INFO" />
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[deal-search-biz]%d %-5p [%c %L] %m%n" />
        </layout>
    </appender>

    <appender name="avatarAppender" class="org.apache.log4j.DailyRollingFileAppender">
         <param name="Threshold" value="INFO" />
        <param name="File" value="/data/applogs/deal-search-biz/logs/avatar.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[deal-search-biz]%d %-5p [%c %L] %m%n" />
        </layout>
    </appender>

    <appender name="appAppender" class="org.apache.log4j.DailyRollingFileAppender">
         <param name="Threshold" value="INFO" />
        <param name="File" value="/data/applogs/deal-search-biz/logs/app.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[deal-search-biz]%d %-5p [%c %L] %m%n" />
        </layout>
    </appender>

    <appender name="ibatisAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <!-- <param name="Threshold" value="INFO" /> -->
        <param name="File" value="/data/applogs/deal-search-biz/logs/ibatis.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[deal-search-biz]%d %-5p [%c %L] %m%n" />
        </layout>
    </appender>

    <appender name="illegalAccessAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/deal-search-biz/logs/illegalAccess.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[deal-search-biz]%d %-5p [%c %L] %m%n" />
        </layout>
    </appender>

    <appender name="illegalParameterAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/deal-search-biz/logs/illegalParameter.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[deal-search-biz]%d %-5p [%c %L] %m%n" />
        </layout>
    </appender>

    <logger name="com.dianping.avatar" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="avatarAppender" />
    </logger>

    <appender name="perfAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/deal-search-biz/logs/perf.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[deal-search-biz]%d %-5p [%c] %m%n" />
        </layout>
    </appender>

    <logger name="perfLog" additivity="false">
        <level value="INFO" />
        <appender-ref ref="perfAppender" />
    </logger>

    <logger name="com.ibatis" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="CONSOLE" />

    </logger>

    <logger name="java.sql"  additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <root>
        <level value="ERROR" />
        <appender-ref ref="CONSOLE" />

    </root>

</log4j:configuration>
