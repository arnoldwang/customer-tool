    <bean id="syncSalesForceToApolloTask" class="com.dianping.customer.tool.task.SyncSalesForceToApolloTask"/>

    <!--同步SalesForce与Apollo中UserShopTerritory数据的定时器-->
    <bean id="syncSalesForceToApolloTaskJob"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="syncSalesForceToApolloTask"/>
        <property name="targetMethod" value="go"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="syncSalesForceToApolloExtCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="syncSalesForceToApolloTaskJob"/>
        <property name="cronExpression" value="${customer-pc-job.sync.sales.bu.quartz.expression}"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="jobDetails">
            <list>
                <ref bean="syncSalesForceToApolloTaskJob" />
            </list>
        </property>
        <property name="triggers">
            <list>
                <ref bean="syncSalesForceToApolloExtCronTrigger" />
            </list>
        </property>
    </bean>

     <bean id="parentDao" class="org.springframework.aop.framework.ProxyFactoryBean" abstract="true">
         <property name="interceptorNames">
             <list>
                 <value>daoAutoRealizerAdvisor</value>
             </list>
         </property>
     </bean>

<!--     MySQL sql converter -->
     <bean id="mysqlConverter" class="com.dianping.avatar.dao.ibatis.MySqlConverter"/>

